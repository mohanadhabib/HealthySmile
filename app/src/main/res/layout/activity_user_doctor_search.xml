<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="25dp"
    android:paddingHorizontal="15dp"
    android:background="@color/background_color"
    tools:context=".Activity.User.UserDoctorSearchActivity">
    <ImageView
        android:id="@+id/back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_arrow_back"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/title"
        app:layout_constraintTop_toTopOf="@id/back"
        app:layout_constraintBottom_toBottomOf="@id/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/doctor_search"
        android:textStyle="bold"
        android:textFontWeight="900"
        android:textColor="@color/text_color"
        android:textSize="20sp"
        android:fontFamily="@font/nunito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g0"
        app:layout_constraintGuide_percent="0.1"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/search_doctor"
        app:layout_constraintTop_toBottomOf="@id/g0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:boxCornerRadiusTopStart="20dp"
        app:boxCornerRadiusTopEnd="20dp"
        app:boxCornerRadiusBottomStart="20dp"
        app:boxCornerRadiusBottomEnd="20dp"
        app:boxBackgroundColor="@color/grey_background"
        app:boxStrokeColor="@color/grey_stroke"
        app:startIconDrawable="@drawable/ic_search"
        app:boxStrokeWidth="1.5dp"
        android:hint="@string/search_doctors"
        app:hintTextColor="@color/grey"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autofillHints="name"
            android:fontFamily="@font/nunito_regular"
            android:maxLines="1"
            android:inputType="text"
            android:textSize="14sp"
            android:textColor="@color/grey"
            android:textFontWeight="800" />
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:id="@+id/no_item_txt"
        android:visibility="invisible"
        android:text="@string/no_data_found"
        android:gravity="center"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/search_doctor"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/nunito_regular"
        android:textSize="18sp"
        android:textColor="@color/text_color"
        android:textStyle="bold"
        android:textFontWeight="900"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_doctors_recycler"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintTop_toBottomOf="@id/search_doctor"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>