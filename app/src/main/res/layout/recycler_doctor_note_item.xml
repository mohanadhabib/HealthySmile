<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:background="@drawable/background_top_doctors"
    android:layout_marginBottom="30dp">
    <TextView
        android:id="@+id/doctor_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/nunito_regular"
        android:textSize="19sp"
        android:textColor="@color/text_color"
        android:textStyle="bold"
        android:textFontWeight="900"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/doctor_spec"
        app:layout_constraintTop_toBottomOf="@id/doctor_name"
        app:layout_constraintStart_toStartOf="@id/doctor_name"
        android:fontFamily="@font/nunito_regular"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:textColor="@color/grey"
        android:textStyle="bold"
        android:textFontWeight="900"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/doctor_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="5dp"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:shapeAppearanceOverlay="@style/circleImageView"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g0"
        app:layout_constraintGuide_percent="0.5"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/notes"
        app:layout_constraintTop_toTopOf="@id/g0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:text="@string/notes"
        android:fontFamily="@font/nunito_regular"
        android:textSize="16sp"
        android:textColor="@color/appointment_color"
        android:textStyle="bold"
        android:textFontWeight="900"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/doctor_notes"
        app:layout_constraintTop_toBottomOf="@id/notes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/doctor_img"
        android:paddingHorizontal="5dp"
        android:textAlignment="viewStart"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/nunito_regular"
        android:textSize="17sp"
        android:textColor="@color/text_color"
        android:textStyle="bold"
        android:textFontWeight="900"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>