<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="25dp"
    android:paddingHorizontal="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/txt0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/scan_txt"
        android:fontFamily="@font/nunito_regular"
        android:textSize="22sp"
        android:textColor="@color/text_color"
        android:textStyle="bold"
        android:textFontWeight="900"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vg0"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vg1"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g0"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g3"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g1"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/before_img"
        app:layout_constraintTop_toBottomOf="@id/g0"
        app:layout_constraintBottom_toTopOf="@id/g1"
        app:layout_constraintStart_toEndOf="@id/vg0"
        app:layout_constraintEnd_toStartOf="@id/vg1"
        android:layout_marginVertical="25dp"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <ScrollView
        app:layout_constraintTop_toBottomOf="@id/g1"
        app:layout_constraintBottom_toTopOf="@id/g2"
        app:layout_constraintStart_toEndOf="@id/vg0"
        app:layout_constraintEnd_toStartOf="@id/vg1"
        android:layout_width="0dp"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/result"
            android:textColor="@color/text_color"
            android:textSize="14sp"
            android:textFontWeight="900"
            android:fontFamily="@font/nunito"
            app:layout_constraintTop_toBottomOf="@id/g1"
            app:layout_constraintStart_toStartOf="@id/vg0"
            app:layout_constraintEnd_toEndOf="@id/vg1"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </ScrollView>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g2"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/after_img"
        app:layout_constraintTop_toBottomOf="@id/g2"
        app:layout_constraintBottom_toTopOf="@id/g3"
        app:layout_constraintStart_toEndOf="@id/vg0"
        app:layout_constraintEnd_toStartOf="@id/vg1"
        android:layout_marginVertical="25dp"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/submit_img_button"
        app:layout_constraintTop_toBottomOf="@id/g3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/capture_img_button"
        android:layout_marginEnd="20dp"
        android:padding="15dp"
        app:cornerRadius="20dp"
        android:text="@string/submit_image"
        android:textColor="@color/background_color"
        android:fontFamily="@font/nunito_regular"
        android:textFontWeight="600"
        android:textSize="16sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <TextView
        app:layout_constraintStart_toEndOf="@id/submit_img_button"
        app:layout_constraintEnd_toStartOf="@id/capture_img_button"
        app:layout_constraintTop_toTopOf="@id/submit_img_button"
        app:layout_constraintBottom_toBottomOf="@id/submit_img_button"
        android:text="@string/or"
        android:textColor="@color/grey"
        android:textSize="18sp"
        android:fontFamily="@font/nunito_regular"
        android:textFontWeight="600"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/capture_img_button"
        app:layout_constraintTop_toBottomOf="@id/g3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/submit_img_button"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:padding="15dp"
        app:cornerRadius="20dp"
        android:text="@string/capture_image"
        android:textColor="@color/background_color"
        android:fontFamily="@font/nunito_regular"
        android:textFontWeight="600"
        android:textSize="16sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progress"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:indicatorColor="@color/main_color"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/no_image_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_regular"
        android:textSize="22sp"
        android:textColor="@color/grey"
        android:textStyle="bold"
        android:textFontWeight="900"
        android:text="@string/upload_image_or_capture_na_real_one_to_see_diseases"
        android:visibility="visible"
        />
</androidx.constraintlayout.widget.ConstraintLayout>