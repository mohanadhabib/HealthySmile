<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="25dp"
    android:paddingHorizontal="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vg0"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vg1"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txt0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/scan_txt"
        android:fontFamily="@font/nunito_regular"
        android:textSize="22sp"
        android:textColor="@color/text_color"
        android:textStyle="bold"
        android:textFontWeight="900"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/hint_txt"
        app:layout_constraintTop_toBottomOf="@id/txt0"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:text="@string/tips_for_capture_image_n_n_light_it_up_natural_light_is_best_but_avoid_harsh_shadows_indoors_use_bright_white_light_skip_the_flash_it_creates_glare_n_steady_does_it_hold_your_phone_still_or_use_a_tripod_for_sharp_focused_pics_n_focus_on_your_smile_make_sure_your_teeth_are_the_stars_no_fingers_hair_or_other_objects_blocking_the_view_n_multiple_angles_capture_close_up_shots_from_the_front_back_and_sides_of_the_teeth_you_re_concerned_about_n_show_your_smile_gently_pull_back_your_lips_and_keep_your_mouth_slightly_open_for_a_clear_view_smile_naturally_n_clean_and_clear_brush_your_teeth_beforehand_to_remove_anything_hiding_your_pearly_whites"
        android:fontFamily="@font/nunito_regular"
        android:textSize="13sp"
        android:textColor="@color/text_color"
        android:textStyle="normal"
        android:textFontWeight="900"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g0"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g1"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/before_img"
        app:layout_constraintTop_toBottomOf="@id/g0"
        app:layout_constraintBottom_toTopOf="@id/g1"
        app:layout_constraintStart_toEndOf="@id/vg0"
        app:layout_constraintEnd_toStartOf="@id/vg1"
        android:layout_marginVertical="25dp"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g3"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/after_img"
        app:layout_constraintTop_toBottomOf="@id/g1"
        app:layout_constraintBottom_toTopOf="@id/g3"
        app:layout_constraintStart_toEndOf="@id/vg0"
        app:layout_constraintEnd_toStartOf="@id/vg1"
        android:layout_marginVertical="25dp"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g2"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ScrollView
        app:layout_constraintTop_toBottomOf="@id/g3"
        app:layout_constraintBottom_toTopOf="@id/g2"
        app:layout_constraintStart_toEndOf="@id/vg0"
        app:layout_constraintEnd_toStartOf="@id/vg1"
        android:layout_width="0dp"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/result"
            android:textColor="@color/text_color"
            android:textSize="14sp"
            android:textFontWeight="900"
            android:fontFamily="@font/nunito"
            app:layout_constraintTop_toBottomOf="@id/g1"
            app:layout_constraintStart_toStartOf="@id/vg0"
            app:layout_constraintEnd_toEndOf="@id/vg1"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </ScrollView>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/submit_img_button"
        app:layout_constraintTop_toBottomOf="@id/g2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/capture_img_button"
        android:layout_marginEnd="20dp"
        android:padding="15dp"
        app:cornerRadius="20dp"
        android:text="@string/submit_image"
        android:textColor="@color/background_color"
        android:fontFamily="@font/nunito_regular"
        android:textFontWeight="600"
        android:textSize="16sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <TextView
        app:layout_constraintStart_toEndOf="@id/submit_img_button"
        app:layout_constraintEnd_toStartOf="@id/capture_img_button"
        app:layout_constraintTop_toTopOf="@id/submit_img_button"
        app:layout_constraintBottom_toBottomOf="@id/submit_img_button"
        android:text="@string/or"
        android:textColor="@color/grey"
        android:textSize="18sp"
        android:fontFamily="@font/nunito_regular"
        android:textFontWeight="600"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/capture_img_button"
        app:layout_constraintTop_toBottomOf="@id/g2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/submit_img_button"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:padding="15dp"
        app:cornerRadius="20dp"
        android:text="@string/capture_image"
        android:textColor="@color/background_color"
        android:fontFamily="@font/nunito_regular"
        android:textFontWeight="600"
        android:textSize="16sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progress"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:indicatorColor="@color/main_color"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/loading_txt"
        app:layout_constraintStart_toStartOf="@id/progress"
        app:layout_constraintEnd_toEndOf="@id/progress"
        app:layout_constraintTop_toBottomOf="@id/progress"
        android:textColor="@color/text_color"
        android:textSize="14sp"
        android:visibility="invisible"
        android:text="@string/loading"
        android:fontFamily="@font/nunito_regular"
        android:textFontWeight="700"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/no_image_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_regular"
        android:textSize="22sp"
        android:textColor="@color/grey"
        android:textStyle="bold"
        android:textFontWeight="900"
        android:text="@string/upload_image_or_capture_na_real_one_to_see_diseases"
        android:visibility="visible"
        />
</androidx.constraintlayout.widget.ConstraintLayout>