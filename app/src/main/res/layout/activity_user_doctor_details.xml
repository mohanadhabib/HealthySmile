<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="25dp"
    android:paddingHorizontal="15dp"
    android:background="@color/background_color"
    tools:context=".view.activity.user.UserDoctorDetailsActivity">
    <ImageView
        android:id="@+id/back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_arrow_back"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/title"
        app:layout_constraintTop_toTopOf="@id/back"
        app:layout_constraintBottom_toBottomOf="@id/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/doctor_detail"
        android:textStyle="bold"
        android:textFontWeight="900"
        android:textColor="@color/text_color"
        android:textSize="20sp"
        android:fontFamily="@font/nunito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g0"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ScrollView
        android:id="@+id/main_scroll"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintBottom_toTopOf="@id/g0"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="horizontal"
                android:padding="10dp"
                android:id="@+id/root"
                android:weightSum="5">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/doctor_img"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:cropToPadding="true"
                    android:scaleType="centerCrop"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="135dp"
                    app:shapeAppearanceOverlay="@style/roundedImageView"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_marginStart="20dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:layout_width="0dp">
                    <TextView
                        android:id="@+id/doctor_name"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/nunito_regular"
                        android:textSize="19sp"
                        android:textColor="@color/text_color"
                        android:textStyle="bold"
                        android:textFontWeight="900"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/doctor_spec"
                        app:layout_constraintTop_toBottomOf="@id/doctor_name"
                        app:layout_constraintStart_toStartOf="@id/doctor_name"
                        android:fontFamily="@font/nunito_regular"
                        android:layout_marginTop="5dp"
                        android:textSize="16sp"
                        android:textColor="@color/grey"
                        android:textStyle="bold"
                        android:textFontWeight="900"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/stars"
                        app:layout_constraintTop_toBottomOf="@id/doctor_spec"
                        app:layout_constraintStart_toStartOf="@id/doctor_spec"
                        android:layout_marginTop="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/ad_background"
                        android:padding="5dp"
                        android:background="@drawable/background_ad">
                        <ImageView
                            android:id="@+id/star_icon"
                            app:layout_constraintTop_toTopOf="@id/stars"
                            app:layout_constraintBottom_toBottomOf="@id/stars"
                            app:layout_constraintStart_toStartOf="@id/stars"
                            android:src="@drawable/ic_star"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/star_txt"
                            app:layout_constraintTop_toTopOf="@id/stars"
                            app:layout_constraintBottom_toBottomOf="@id/stars"
                            app:layout_constraintStart_toEndOf="@id/star_icon"
                            android:layout_marginStart="8dp"
                            android:textSize="10sp"
                            android:textColor="@color/main_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <LinearLayout
                        app:layout_constraintTop_toBottomOf="@id/stars"
                        app:layout_constraintStart_toStartOf="@id/stars"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/loc_icon"
                            android:src="@drawable/ic_location"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/distance"
                            android:textSize="12sp"
                            android:fontFamily="@font/nunito_regular"
                            android:textFontWeight="900"
                            android:textStyle="bold"
                            android:textColor="@color/grey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/about"
                app:layout_constraintTop_toBottomOf="@id/root"
                app:layout_constraintStart_toStartOf="@id/root"
                android:fontFamily="@font/nunito_regular"
                android:layout_marginTop="20dp"
                android:text="@string/about"
                android:textSize="19sp"
                android:textColor="@color/text_color"
                android:textStyle="bold"
                android:textFontWeight="900"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/about_txt"
                app:layout_constraintTop_toBottomOf="@id/about"
                app:layout_constraintStart_toStartOf="@id/about"
                android:fontFamily="@font/nunito_regular"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:textColor="@color/grey"
                android:textStyle="bold"
                android:textFontWeight="900"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/g00"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/date_picker"
                app:layout_constraintTop_toBottomOf="@id/about_txt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/g00"
                android:padding="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="5dp"
                app:cornerRadius="20dp"
                android:text="@string/pick_a_date"
                android:textColor="@color/background_color"
                android:fontFamily="@font/nunito_regular"
                android:textFontWeight="600"
                android:textSize="16sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/time_picker"
                app:layout_constraintTop_toBottomOf="@id/about_txt"
                app:layout_constraintStart_toEndOf="@id/g00"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="5dp"
                app:cornerRadius="20dp"
                android:text="@string/pick_a_time"
                android:textColor="@color/background_color"
                android:fontFamily="@font/nunito_regular"
                android:textFontWeight="600"
                android:textSize="16sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/selected_date"
                app:layout_constraintTop_toBottomOf="@id/date_picker"
                app:layout_constraintStart_toStartOf="@id/date_picker"
                android:fontFamily="@font/nunito_regular"
                android:layout_marginTop="20dp"
                android:text="@string/selected_date_and_time"
                android:textSize="19sp"
                android:textColor="@color/text_color"
                android:textStyle="bold"
                android:textFontWeight="900"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:id="@+id/layout"
                app:layout_constraintTop_toBottomOf="@id/selected_date"
                android:background="@drawable/background_top_doctors"
                android:layout_marginTop="25dp"
                android:weightSum="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/date"
                    android:layout_weight="2.25"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:text="@string/no_date_selected"
                    android:fontFamily="@font/nunito_regular"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:textSize="18sp"
                    android:textColor="@color/grey"
                    android:textStyle="bold"
                    android:textFontWeight="900"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/time"
                    android:layout_weight="1.75"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:text="@string/no_time_selected"
                    android:fontFamily="@font/nunito_regular"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:textSize="18sp"
                    android:textColor="@color/grey"
                    android:textStyle="bold"
                    android:textFontWeight="900"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <LinearLayout
        app:layout_constraintBottom_toBottomOf="parent"
        android:weightSum="4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/chat_btn"
            android:layout_weight="1"
            android:padding="15dp"
            android:paddingEnd="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="5dp"
            android:backgroundTint="@color/ad_background"
            app:cornerRadius="20dp"
            app:icon="@drawable/ic_chat"
            app:iconTint="@color/main_color"
            app:iconGravity="textStart"
            app:iconSize="25dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/book_appointment"
            android:layout_weight="3"
            android:padding="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="5dp"
            app:cornerRadius="20dp"
            android:text="@string/book_appointment"
            android:textColor="@color/background_color"
            android:fontFamily="@font/nunito_regular"
            android:textFontWeight="600"
            android:textSize="16sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>