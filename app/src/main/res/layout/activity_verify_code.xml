<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:padding="25dp"
    tools:context=".view.activity.VerifyCodeActivity">
    <ImageView
        android:id="@+id/back_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_back"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g1"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.075"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/verification_code_title"
        app:layout_constraintTop_toBottomOf="@id/g1"
        app:layout_constraintStart_toStartOf="@id/back_button"
        android:text="@string/enter_verification_code"
        android:fontFamily="@font/nunito_regular"
        android:textFontWeight="900"
        android:textColor="@color/text_color"
        android:textSize="28dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txt1"
        app:layout_constraintTop_toBottomOf="@id/verification_code_title"
        app:layout_constraintStart_toStartOf="@id/verification_code_title"
        android:layout_marginTop="15dp"
        android:text="@string/enter_code_that_we_have_sent_to_your_nnumber"
        android:fontFamily="@font/nunito_regular"
        android:textFontWeight="700"
        android:textColor="@color/grey"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/t1"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/txt1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/t2"
        app:boxCornerRadiusBottomEnd="20dp"
        app:boxCornerRadiusBottomStart="20dp"
        app:boxCornerRadiusTopEnd="20dp"
        app:boxCornerRadiusTopStart="20dp"
        app:boxStrokeColor="@color/main_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/tt1"
            android:inputType="number"
            android:textColor="@color/text_color"
            android:textSize="14dp"
            android:gravity="center"
            android:textAlignment="center"
            android:textFontWeight="900"
            android:maxLength="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/t2"
        app:layout_constraintTop_toTopOf="@id/t1"
        app:layout_constraintLeft_toRightOf="@id/t1"
        app:layout_constraintRight_toLeftOf="@id/t3"
        app:boxCornerRadiusBottomEnd="20dp"
        app:boxCornerRadiusBottomStart="20dp"
        app:boxCornerRadiusTopEnd="20dp"
        app:boxCornerRadiusTopStart="20dp"
        app:boxStrokeColor="@color/main_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/tt2"
            android:inputType="number"
            android:textSize="14dp"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/text_color"
            android:textFontWeight="900"
            android:maxLength="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/t3"
        app:layout_constraintTop_toTopOf="@id/t2"
        app:layout_constraintLeft_toRightOf="@id/t2"
        app:layout_constraintRight_toLeftOf="@id/t4"
        app:boxCornerRadiusBottomEnd="20dp"
        app:boxCornerRadiusBottomStart="20dp"
        app:boxCornerRadiusTopEnd="20dp"
        app:boxCornerRadiusTopStart="20dp"
        app:boxStrokeColor="@color/main_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/tt3"
            android:inputType="number"
            android:textSize="14dp"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/text_color"
            android:textFontWeight="900"
            android:maxLength="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/t4"
        app:layout_constraintTop_toTopOf="@id/t3"
        app:layout_constraintLeft_toRightOf="@id/t3"
        app:layout_constraintRight_toLeftOf="@id/t5"
        app:boxCornerRadiusBottomEnd="20dp"
        app:boxCornerRadiusBottomStart="20dp"
        app:boxCornerRadiusTopEnd="20dp"
        app:boxCornerRadiusTopStart="20dp"
        app:boxStrokeColor="@color/main_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/tt4"
            android:inputType="number"
            android:textSize="14dp"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/text_color"
            android:textFontWeight="900"
            android:maxLength="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/t5"
        app:layout_constraintTop_toTopOf="@id/t4"
        app:layout_constraintLeft_toRightOf="@id/t4"
        app:layout_constraintRight_toLeftOf="@id/t6"
        app:boxCornerRadiusBottomEnd="20dp"
        app:boxCornerRadiusBottomStart="20dp"
        app:boxCornerRadiusTopEnd="20dp"
        app:boxCornerRadiusTopStart="20dp"
        app:boxStrokeColor="@color/main_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/tt5"
            android:inputType="number"
            android:textSize="14dp"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/text_color"
            android:textFontWeight="900"
            android:maxLength="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/t6"
        app:layout_constraintTop_toTopOf="@id/t5"
        app:layout_constraintLeft_toRightOf="@id/t5"
        app:layout_constraintRight_toRightOf="parent"
        app:boxCornerRadiusBottomEnd="20dp"
        app:boxCornerRadiusBottomStart="20dp"
        app:boxCornerRadiusTopEnd="20dp"
        app:boxCornerRadiusTopStart="20dp"
        app:boxStrokeColor="@color/main_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/tt6"
            android:inputType="number"
            android:textSize="14dp"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/text_color"
            android:textFontWeight="900"
            android:maxLength="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g2"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/verify_button"
        app:layout_constraintTop_toBottomOf="@id/g2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="15dp"
        app:cornerRadius="20dp"
        android:text="@string/verify"
        android:textColor="@color/background_color"
        android:fontFamily="@font/nunito_regular"
        android:textFontWeight="600"
        android:textSize="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g3"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.515"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/resend_txt"
        app:layout_constraintTop_toBottomOf="@id/g3"
        app:layout_constraintStart_toStartOf="@id/vg1"
        android:text="@string/didn_t_receive_the_code"
        android:fontFamily="@font/nunito"
        android:textSize="16dp"
        android:textColor="@color/grey"
        android:textFontWeight="700"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/resend_btn"
        app:layout_constraintTop_toTopOf="@id/resend_txt"
        app:layout_constraintBottom_toBottomOf="@id/resend_txt"
        app:layout_constraintStart_toEndOf="@id/resend_txt"
        android:layout_marginStart="5dp"
        android:text="@string/resend"
        android:fontFamily="@font/nunito"
        android:textSize="16dp"
        android:textColor="@color/main_color"
        android:textFontWeight="900"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vg1"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.16875"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>