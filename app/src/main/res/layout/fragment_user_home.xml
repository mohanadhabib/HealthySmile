<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="25dp"
    android:paddingHorizontal="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<TextView
    android:id="@+id/txt0"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:text="@string/find_your_desired"
    android:fontFamily="@font/nunito_regular"
    android:textSize="22sp"
    android:textColor="@color/text_color"
    android:textStyle="bold"
    android:textFontWeight="900"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txt1"
        app:layout_constraintTop_toBottomOf="@id/txt0"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/health_solution"
        android:fontFamily="@font/nunito_regular"
        android:textSize="22sp"
        android:textColor="@color/text_color"
        android:textStyle="bold"
        android:textFontWeight="900"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/user_guide"
        app:layout_constraintTop_toBottomOf="@id/txt0"
        app:layout_constraintBottom_toTopOf="@id/txt1"
        app:layout_constraintEnd_toStartOf="@id/theme"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.google.android.material.materialswitch.MaterialSwitch
        android:id="@+id/theme"
        app:layout_constraintTop_toTopOf="@id/user_guide"
        app:layout_constraintBottom_toBottomOf="@id/user_guide"
        app:layout_constraintEnd_toEndOf="parent"
        android:checked="false"
        app:thumbIcon="@drawable/ic_light_mode"
        app:thumbTint="@color/background_color"
        app:thumbIconTint="@color/main_color"
        app:trackTint="@color/main_color"
        app:trackDecorationTint="@color/main_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/language"
        app:layout_constraintTop_toTopOf="@id/language_layout"
        app:layout_constraintEnd_toStartOf="@id/language_layout"
        app:layout_constraintBottom_toBottomOf="@id/language_layout"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/language_layout"
        app:layout_constraintTop_toBottomOf="@id/theme"
        app:layout_constraintEnd_toEndOf="@id/theme"
        android:hint="@string/language"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"/>
    </com.google.android.material.textfield.TextInputLayout>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g0"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.205"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/search_doctor"
        app:layout_constraintTop_toBottomOf="@id/g0"
        app:layout_constraintStart_toStartOf="@id/txt1"
        app:layout_constraintEnd_toEndOf="@id/theme"
        app:boxCornerRadiusTopStart="20dp"
        app:boxCornerRadiusTopEnd="20dp"
        app:boxCornerRadiusBottomStart="20dp"
        app:boxCornerRadiusBottomEnd="20dp"
        app:boxBackgroundColor="@color/grey_background"
        app:boxStrokeColor="@color/grey_stroke"
        app:startIconDrawable="@drawable/ic_search"
        app:boxStrokeWidth="1.5dp"
        android:hint="@string/search_doctors"
        app:hintTextColor="@color/grey"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autofillHints="name"
            android:fontFamily="@font/nunito_regular"
            android:focusableInTouchMode="false"
            android:maxLines="1"
            android:inputType="text"
            android:textSize="14sp"
            android:textColor="@color/grey"
            android:textFontWeight="800" />
    </com.google.android.material.textfield.TextInputLayout>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g1"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.335"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toBottomOf="@id/g1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/ad_background"
        android:background="@drawable/background_ad"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingStart="30dp">
        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/ad_txt0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/early_protection_for"
            android:fontFamily="@font/nunito_regular"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textFontWeight="900"/>
        <TextView
            app:layout_constraintTop_toBottomOf="@id/ad_txt0"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/ad_txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/your_family_health"
            android:fontFamily="@font/nunito_regular"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textFontWeight="900"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/ad_txt1"
            app:layout_constraintStart_toStartOf="@id/ad_txt1"
            android:backgroundTint="@color/main_color"
            android:text="@string/learn_more"
            android:textColor="@color/background_color"
            android:fontFamily="@font/nunito_regular"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textFontWeight="900"
            app:cornerRadius="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/img"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g2"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.625"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/top_doctors"
        app:layout_constraintTop_toBottomOf="@id/g2"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/top_doctors"
        android:fontFamily="@font/nunito_regular"
        android:textSize="20sp"
        android:textColor="@color/text_color"
        android:textStyle="bold"
        android:textFontWeight="900"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/see_more_doctors"
        app:layout_constraintTop_toTopOf="@id/top_doctors"
        app:layout_constraintBottom_toBottomOf="@id/top_doctors"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/see_all"
        android:fontFamily="@font/nunito_regular"
        android:textSize="16sp"
        android:textColor="@color/main_color"
        android:textStyle="bold"
        android:textFontWeight="900"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.685" />
    <TextView
        android:id="@+id/no_item_txt"
        android:text="@string/no_data_found"
        android:gravity="center"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/g3"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/nunito_regular"
        android:textSize="18sp"
        android:textColor="@color/text_color"
        android:textStyle="bold"
        android:textFontWeight="900"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/top_doctors_recycler"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/g3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        android:scrollbars="horizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>