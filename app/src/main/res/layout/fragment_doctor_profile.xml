<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_color"
    tools:context=".view.fragment.doctor.DoctorProfileFragment">
    <TextView
        android:id="@+id/txt_header"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginVertical="25dp"
        android:layout_marginHorizontal="15dp"
        android:text="@string/profile_txt"
        android:fontFamily="@font/nunito_regular"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textFontWeight="900"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g0"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g1"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vg0"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.35"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vg1"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.65"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profile_img"
        android:clickable="true"
        app:layout_constraintTop_toBottomOf="@id/g0"
        app:layout_constraintBottom_toTopOf="@id/g1"
        app:layout_constraintStart_toEndOf="@id/vg0"
        app:layout_constraintEnd_toStartOf="@id/vg1"
        app:shapeAppearanceOverlay="@style/circleImageView"
        android:padding="5dp"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g2"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/user_name"
        app:layout_constraintTop_toBottomOf="@id/g2"
        app:layout_constraintStart_toStartOf="@id/profile_img"
        app:layout_constraintEnd_toEndOf="@id/profile_img"
        android:textColor="@color/white"
        android:textFontWeight="900"
        android:fontFamily="@font/nunito"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:id="@+id/view"
        app:layout_constraintTop_toBottomOf="@id/g"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/background_profile_card"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/view_layout"
        app:layout_constraintTop_toTopOf="@id/view"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingTop="10dp"
        android:paddingHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:id="@+id/layout_saved"
            android:clickable="true"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_my_saved"
                android:layout_weight="0.5"
                android:layout_width="45dp"
                android:layout_height="45dp"/>
            <TextView
                android:textColor="@color/text_color"
                android:text="@string/my_patient_s_saved"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textFontWeight="900"
                android:fontFamily="@font/nunito"
                android:layout_weight="4.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:src="@drawable/ic_arrow"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/d1"
            app:layout_constraintTop_toBottomOf="@id/layout_saved"
            app:dividerColor="@color/grey"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/layout_appointment"
            android:clickable="true"
            app:layout_constraintTop_toBottomOf="@id/d1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="6"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_my_appointment"
                android:layout_weight="0.5"
                android:layout_width="45dp"
                android:layout_height="45dp"/>
            <TextView
                android:textColor="@color/text_color"
                android:text="@string/appointment_txt"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textFontWeight="900"
                android:fontFamily="@font/nunito"
                android:layout_weight="4.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:src="@drawable/ic_arrow"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/d2"
            app:layout_constraintTop_toBottomOf="@id/layout_appointment"
            app:dividerColor="@color/grey"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/layout_chat_bot"
            android:clickable="true"
            app:layout_constraintTop_toBottomOf="@id/d2"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="6"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_ai_with_background"
                android:layout_weight="0.5"
                android:layout_width="45dp"
                android:layout_height="45dp"/>
            <TextView
                android:textColor="@color/text_color"
                android:text="@string/chat_with_gemini"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textFontWeight="900"
                android:fontFamily="@font/nunito"
                android:layout_weight="4.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:src="@drawable/ic_arrow"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/d3"
            app:layout_constraintTop_toBottomOf="@id/layout_chat_bot"
            app:dividerColor="@color/grey"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/layout_gemini"
            android:clickable="true"
            app:layout_constraintTop_toBottomOf="@id/d3"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="6"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_ai_with_background"
                android:layout_weight="0.5"
                android:layout_width="45dp"
                android:layout_height="45dp"/>
            <TextView
                android:textColor="@color/text_color"
                android:text="@string/chat_with_gemini_2"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textFontWeight="900"
                android:fontFamily="@font/nunito"
                android:layout_weight="4.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:src="@drawable/ic_arrow"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/d4"
            app:layout_constraintTop_toBottomOf="@id/layout_gemini"
            app:dividerColor="@color/grey"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/layout_faq"
            android:clickable="true"
            app:layout_constraintTop_toBottomOf="@id/d4"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="6"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_info_with_background"
                android:layout_weight="0.5"
                android:layout_width="45dp"
                android:layout_height="45dp"/>
            <TextView
                android:textColor="@color/text_color"
                android:text="@string/user_guide"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textFontWeight="900"
                android:fontFamily="@font/nunito"
                android:layout_weight="4.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:src="@drawable/ic_arrow"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/d5"
            app:layout_constraintTop_toBottomOf="@id/layout_faq"
            app:dividerColor="@color/grey"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/layout_logout"
            android:clickable="true"
            app:layout_constraintTop_toBottomOf="@id/d5"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="6"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_logout"
                android:layout_weight="0.5"
                android:layout_width="45dp"
                android:layout_height="45dp"/>
            <TextView
                android:textColor="@color/text_color"
                android:text="@string/logout"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textFontWeight="900"
                android:fontFamily="@font/nunito"
                android:layout_weight="4.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:src="@drawable/ic_arrow"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>