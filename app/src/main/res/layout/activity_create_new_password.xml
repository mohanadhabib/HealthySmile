<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:padding="30dp"
    tools:context=".View.Activity.CreateNewPasswordActivity">
    <ImageView
        android:id="@+id/back_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/back"
        android:src="@drawable/ic_back"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g1"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.075"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/create_new_password_title"
        app:layout_constraintTop_toBottomOf="@id/g1"
        app:layout_constraintStart_toStartOf="@id/back_button"
        android:text="@string/create_new_password"
        android:fontFamily="@font/nunito_regular"
        android:textFontWeight="900"
        android:textColor="@color/text_color"
        android:textSize="28sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txt1"
        app:layout_constraintTop_toBottomOf="@id/create_new_password_title"
        app:layout_constraintStart_toStartOf="@id/create_new_password_title"
        android:layout_marginTop="15dp"
        android:text="@string/create_your_new_password_to_login"
        android:fontFamily="@font/nunito_regular"
        android:textFontWeight="700"
        android:textColor="@color/grey"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password_layout"
        app:layout_constraintTop_toBottomOf="@id/txt1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:boxCornerRadiusTopStart="20dp"
        app:boxCornerRadiusTopEnd="20dp"
        app:boxCornerRadiusBottomStart="20dp"
        app:boxCornerRadiusBottomEnd="20dp"
        app:boxBackgroundColor="@color/grey_background"
        app:boxStrokeColor="@color/grey_stroke"
        app:startIconDrawable="@drawable/ic_password"
        app:startIconTint="@color/main_color"
        app:endIconDrawable="@drawable/ic_show_password"
        app:endIconTint="@color/main_color"
        app:endIconMode="custom"
        android:layout_marginTop="25dp"
        app:boxStrokeWidth="1.5dp"
        android:hint="@string/enter_password"
        app:hintTextColor="@color/grey"
        app:errorEnabled="true"
        app:errorTextColor="@color/error_color"
        app:boxStrokeErrorColor="@color/error_color"
        app:errorIconTint="@color/error_color"
        app:cursorErrorColor="@color/error_color"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autofillHints="password"
            android:fontFamily="@font/nunito_regular"
            android:maxLines="1"
            android:inputType="textPassword"
            android:textSize="16sp"
            android:textColor="@color/grey"
            android:textFontWeight="800" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/confirm_password_layout"
        app:layout_constraintTop_toBottomOf="@id/password_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:boxCornerRadiusTopStart="20dp"
        app:boxCornerRadiusTopEnd="20dp"
        app:boxCornerRadiusBottomStart="20dp"
        app:boxCornerRadiusBottomEnd="20dp"
        app:boxBackgroundColor="@color/grey_background"
        app:boxStrokeColor="@color/grey_stroke"
        app:startIconDrawable="@drawable/ic_password"
        app:startIconTint="@color/main_color"
        app:endIconDrawable="@drawable/ic_show_password"
        app:endIconTint="@color/main_color"
        app:endIconMode="custom"
        app:boxStrokeWidth="1.5dp"
        android:hint="@string/confirm_password"
        app:hintTextColor="@color/grey"
        app:errorEnabled="true"
        app:errorTextColor="@color/error_color"
        app:boxStrokeErrorColor="@color/error_color"
        app:errorIconTint="@color/error_color"
        app:cursorErrorColor="@color/error_color"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/confirm_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autofillHints="password"
            android:fontFamily="@font/nunito_regular"
            android:maxLines="1"
            android:inputType="textPassword"
            android:textSize="16sp"
            android:textColor="@color/grey"
            android:textFontWeight="800" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/create_password_button"
        app:layout_constraintTop_toBottomOf="@id/confirm_password_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="15dp"
        android:layout_marginTop="10dp"
        app:cornerRadius="20dp"
        android:text="@string/create_password"
        android:textColor="@color/background_color"
        android:fontFamily="@font/nunito_regular"
        android:textFontWeight="600"
        android:textSize="16sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
</androidx.constraintlayout.widget.ConstraintLayout>